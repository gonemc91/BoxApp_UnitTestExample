<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.http.app.screens.main.tabs.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_boxFragment"
            app:destination="@id/boxFragment" />
    </fragment>
    <fragment
        android:id="@+id/boxFragment"
        android:name="com.example.http.app.screens.main.tabs.dashboard.BoxFragment"
        android:label="fragment_box"
        tools:layout="@layout/fragment_box" >
        <argument
            android:name="boxID"
            app:argType="long" />
        <argument
            android:name="boxName"
            app:argType="string" />
        <argument
            android:name="boxColorValue"
            app:argType="integer" />
    </fragment>
</navigation>